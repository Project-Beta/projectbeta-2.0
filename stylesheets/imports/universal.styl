::selection
    color #fff
    background #d66d4dfc

*
    padding 0
    margin 0
    position relative
    box-sizing border-box
    text-rendering optimizeLegibility

*.flex
    display flex
    align-items center
    justify-content center

*.noselect
    user-select none

*.nodisplay
    display none

*.container
    width 100%
    height 100%

span.project
    font-family codeLight
    font-weight 100

span.beta
    font-family codeBold
    font-weight 100

a:focus
    box-shadow inset 0 0 0 3px orange
    border none
    outline none

img
    user-drag none
    -webkit-user-drag none
    user-select none

input
    transition 0.2 all linear !important

input:focus
    border-color white !important

//Colors
*.yellow
    color yellow
*.blue
    color blue
*.green
    color green
*.red
    color red
*.white
    color white